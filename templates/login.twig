{% extends 'layout.twig' %}

{% block titulo %}
  Ingresar
{% endblock %}

{% block buscador %}
  <div style="height: 3.375em">

  </div>
{% endblock %}

{% block cuerpo %}
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-12 col-sm-6 col-lg-4">
        <form method="post" action="?action=validar">
          <div class="form-group">
            <label for="usuario">Usuario</label>
            <input name="usuario" type="email" class="form-control" id="usuario" aria-describedby="nombre de usuario" placeholder="Usuario..." required>
          </div>
          <div class="form-group">
            <label for="contrasena">Contraseña</label>
            <input name="contrasena" type="password" class="form-control" id="contrasena" placeholder="Contraseña..." required>
          </div>
          <div class="form-row justify-content-center">
            <button type="submit" class="btn btn-primary align-self-center">Aceptar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
