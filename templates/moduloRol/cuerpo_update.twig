<div class="tab-pane fade" id="contenidoModificarRol" role="tabpanel" aria-labelledby="tabModificarRol">
  <div class="row justify-content-center mt-5">
    <div class="col-10">
      <form class="form-inline justify-content-center" onsubmit="return false">
        <div class="form-group mx-sm-3 mb-2">
          <label for="permiso" class="sr-only">Seleccionar permiso</label>
          <select class="form-control" id="permiso" name="permiso">
            <option value="no seleccionado" selected>Selectionar Permiso...</option>
            {% for permiso in permisosParaRol %}
              <option value="{{permiso.getid}}">{{ permiso.getnombre | capitalize }}</option>
            {% endfor %}
          </select>
        </div>
        <button type="submit" class="btn btn-primary mb-2" id="btnAgregarRol">Agregar permiso</button>
      </form>
      <div class="mt-2">
        <h5 style="text-align: center">Permisos del rol: {{ rol.getNombre | capitalize }}</h5>
        <hr>
        <div class="px-5" >
          {% for permiso in permisosDelRol %}
            <div class="mb-2">
              {{ permiso.getnombre | capitalize }}
              <button type="button" class="close" name="btnQuitarRol" aria-label="Boton para quitar permiso {{ permiso.getnombre | capitalize }}" id="{{ permiso.getId }}">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          {% else %}
            <div style="text-align: center">No tiene</div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
