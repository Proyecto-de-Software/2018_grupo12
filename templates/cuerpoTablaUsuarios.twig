{% set estado = {"0": "Bloqueado", "1": "Activo" } %}

{% for usuario in usuarios %}
  <tr>
    <td>{{ usuario.getFirst_name |title }}</td>
    <td>{{ usuario.getLast_name |title }}</td>
    <td>{{ usuario.getEmail }}</td>
    <td>{{ usuario.getUsername }}</td>
    <td>
      {{ estado[usuario.getActivo] }}
    </td>
    <td>
      {% for rol in usuario.getRoles %}
        {{ rol.nombre |capitalize }} <br>
      {% else %}
        No tiene
      {% endfor %}
    </td>
    <td id="{{usuario.getId}}">
      {% for permiso in permisos %}
        {% include "moduloUsuario/boton_#{permiso}.twig" ignore missing %}
      {% endfor %}
    </td>
  </tr>
  {% else %}
    <tr><td colspan="7" class="textcenter" >No hay usuarios para mostrar</td></tr>
{% endfor %}
